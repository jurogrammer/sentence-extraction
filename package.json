{
  "name": "sentence-extraction",
  "version": "1.0.0",
  "description": "AI-Powered Anki Generator - Extract sentences from videos and create Anki flashcards",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.sentence-extraction.app",
    "productName": "Anki Generator",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.education"
    },
    "files": [
      "out/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "ass-compiler": "^0.1.16",
    "better-sqlite3": "^11.7.0",
    "i18next": "^24.2.2",
    "openai": "^4.77.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.4.1",
    "react-router-dom": "^7.1.1",
    "subtitle": "^4.2.1",
    "uuid": "^11.0.5",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/archiver": "^6.0.3",
    "@types/better-sqlite3": "^7.6.12",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3"
  }
}
